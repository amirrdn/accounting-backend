{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "declarationMap": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    }
  }
  